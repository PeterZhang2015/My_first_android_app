<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.peterzhang.my_first_android_app.ThirdActivity">

    <EditText
        android:id="@+id/reply_msg_from_third_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="17dp"
        android:layout_marginEnd="21dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="448dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/reply_a_message_here"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="17dp"
        android:layout_marginEnd="60dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="446dp"
        android:onClick="returnRepyMessageToSecondActivity"
        android:text="@string/reply"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/reply_msg_from_third_activity"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/received_msg_from_main_activility"
        android:layout_width="239dp"
        android:layout_height="35dp"
        android:layout_marginBottom="236dp"
        android:layout_marginEnd="59dp"
        android:layout_marginLeft="86dp"
        android:layout_marginRight="59dp"
        android:layout_marginStart="86dp"
        android:layout_marginTop="175dp"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="59dp"
        android:layout_marginLeft="86dp"
        android:layout_marginRight="59dp"
        android:layout_marginStart="86dp"
        android:layout_marginTop="130dp"
        android:text="Received request message is:"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/received_msg_from_main_activility"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
