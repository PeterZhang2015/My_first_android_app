<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.peterzhang.my_first_android_app.MainActivity">

    <Button
        android:id="@+id/Main_Activity_Test_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="447dp"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:onClick="launchSecondActivity"
        android:text="@string/send"
        android:textColor="@android:color/holo_red_dark"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/editText_main"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="13dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="449dp"
        android:ems="10"
        android:hint="@string/please_enter_your_message_here"
        android:gravity="top"
        android:scrollHorizontally="false"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/Main_Activity_Test_Button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/reply_msg_from_third_activity"
        android:layout_width="203dp"
        android:layout_height="32dp"
        android:layout_marginBottom="207dp"
        android:layout_marginEnd="90dp"
        android:layout_marginLeft="91dp"
        android:layout_marginRight="90dp"
        android:layout_marginStart="91dp"
        android:layout_marginTop="208dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/Main_Activity_Test_Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/label_reply_from_third_activity"
        android:layout_width="320dp"
        android:layout_height="29dp"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="91dp"
        android:layout_marginLeft="91dp"
        android:layout_marginRight="91dp"
        android:layout_marginStart="91dp"
        android:layout_marginTop="167dp"
        android:text="Received reply from the third activity is:"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/reply_msg_from_third_activity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.364"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

</android.support.constraint.ConstraintLayout>
